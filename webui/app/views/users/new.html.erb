<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				&nbsp;
				</div>
          <div class="col-md-7">
          	<%= form_for @user, url: {action:"create", format: :html}, html: {id:"frmSetupUser", class:"form-horizontal", role:"form"} do |f| %>
              <div class="form-group">
                <div class="col-sm-2">
                  <label for="inputEmail3" class="control-label">Username</label>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :username, class:"form-control", placeholder:"Only Alphabets, Numbers are allowed" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-2">
                  <label for="inputEmail3" class="control-label">Short Name</label>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :name, class:"form-control", placeholder:"Only Alphabets, Numbers are allowed" %>
                </div>
              </div>              
              <div class="form-group">
                <div class="col-sm-2">
                  <label for="inputEmail3" class="control-label">Password</label>
                </div>
                <div class="col-sm-10">
                  <%= f.password_field :hashkey, class:"form-control", placeholder:"Atleast 8 chars with alphabet, number and special symbol" %>	
                  
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-default btn-primary">Create</button>
                </div>
              </div>
            </form>
            <%end%>
          </div>
			<div class="col-md-2">
			&nbsp;
			</div>
		</div>
	</div>
</div>