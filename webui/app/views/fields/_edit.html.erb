<form class="form-horizontal" role="form" accept-charset="UTF-8" action="" method="post">
	<div class='form-group'><div class='col-sm-3'><label class='control-label'>Element</label></div><div class='col-sm-7'><label class='control-label'><%=@field[:fieldname]%></label></div></div>
	<div class='form-group'><div class='col-sm-3'><label class='control-label'>XPath</label></div><div class='col-sm-7'><label class='control-label'><%=@field[:searchpath]%></label></div></div>
	<div class='form-group'><div class='col-sm-3'><label class='control-label'>Value</label></div><div class='col-sm-7'><label class='control-label'><%=@field[:rawvalue]%></label></div></div>
	<div class='form-group'><div class='col-sm-3'><label class='control-label'>Senstivity</label></div><div class='col-sm-7'>
	<%
		s=0 
		@field.sensitivity_values.each do |v|
	%>
	<div class='radio'><label><input type='radio' name='sensitivity' value='<%=s%>' class='control-label' <%= (@field[:sensitivity].to_i == s) ? "checked" :"" %>><%=v%></label></div>
		<% end %>
	</div>
	</div>
</form>	
	